<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EmployeeWebApplication</display-name>
  <servlet>
    <servlet-name>abc</servlet-name>
    <servlet-class>com.login.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>abc</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>pqr</servlet-name>
    <servlet-class>com.user.servlet.AddUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pqr</servlet-name>
    <url-pattern>/addUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>getUserById</servlet-name>
    <servlet-class>com.user.servlet.GetUserById</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getUserById</servlet-name>
    <url-pattern>/getUserById</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UpdateUser</servlet-name>
    <servlet-class>com.user.servlet.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateUser</servlet-name>
    <url-pattern>/UpdateUser</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProfileUpdate</servlet-name>
    <servlet-class>com.user.servlet.ProfileUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileUpdate</servlet-name>
    <url-pattern>/UpdateProfile</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddToLogin</servlet-name>
    <servlet-class>com.user.servlet.AddUserToLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddToLogin</servlet-name>
    <url-pattern>/AddToLogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangePassword</servlet-name>
    <servlet-class>com.user.servlet.ChangePasswordNew</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChangePassword</servlet-name>
    <url-pattern>/ChangePassword</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteUsers</servlet-name>
    <servlet-class>com.user.servlet.DeleteUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteUsers</servlet-name>
    <url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserMassage</servlet-name>
    <servlet-class>com.user.servlet.SendMassage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserMassage</servlet-name>
    <url-pattern>/send</url-pattern>
  </servlet-mapping>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/errorPages/exception.html</location>
	</error-page>
	
	<error-page>
    <error-code>404</error-code>
    <location>/errorPages/404error.html</location>
</error-page>
</web-app>